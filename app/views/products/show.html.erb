<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          
          <dt>Submit a Review</dt>
            <%= form_for product_reviews_path(@product, @review) do |f| %>
            <dd><%= f.text_area :description %></dd>
            <dd><%= f.select :rating, [1, 2, 3, 4, 5] %></dd>
            <dd><%= submit_tag "Submit" %></dd>
            <% end %>

          <dt>Reviews</dt>
            <% @review.each do |review| %>
            <dd> Rating: <%= review.rating %></dd>
            <dd> Description: <%= review.description %></dd>
            <% end %>

        </dl>
      </div>
    </div>

  </article>

</section>
